<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/idEdtStudentName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Enter Student Name" />

    <EditText
        android:id="@+id/idEdtStudentPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Enter Student Password" />

    <EditText
        android:id="@+id/idEdtStudentId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Enter Student Id" />

    <EditText
        android:id="@+id/idEdtStudentBranch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Enter Student Branch" />

    <EditText
        android:id="@+id/idEdtStudentPercentage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
            android:hint="Enter Student Percentage" />


    <!--button for adding new Student-->
    <Button
        android:id="@+id/idBtnAddStudent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Add Student"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/idBtnReadStudents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Students List"
        android:textAllCaps="false" />

</LinearLayout>